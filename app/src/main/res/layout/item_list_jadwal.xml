<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/basecard"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/item_jadwal"
            android:layout_width="wrap_content"
            android:layout_height="425dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:background="@color/background_blue">


            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:background="@color/grey2"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="296dp"
                android:layout_below="@id/tv_tanggal"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="Lokasi"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_alamat"
                        android:layout_width="268dp"
                        android:layout_height="92dp"
                        android:layout_toRightOf="@id/tv1"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="Jl.Anggajaya 2 No.82,Sanggrahan, CondongCatur,Depok,Sleman, YK" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="12">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        android:background="@color/whiteTextColor" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        android:background="@color/whiteTextColor" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:text="Atas Nama"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_atasnama"
                        android:layout_width="264dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/tv2"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="Bpk.Winarto" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="12">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        android:background="@color/whiteTextColor" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        android:background="@color/whiteTextColor" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:text="Acara"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_acara"
                        android:layout_width="264dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/tv3"
                        android:gravity="right"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="Pernikahan Lussy dan Andi" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="12">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        android:background="@color/whiteTextColor" />


                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        android:background="@color/whiteTextColor" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="10dp"
                    android:text="Detail">

                </Button>


            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>