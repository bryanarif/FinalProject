<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="371dp"
                android:layout_height="145dp"
                android:padding="@dimen/fab_margin">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/fab_margin"
                    app:cardElevation="@dimen/fab_margin">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="121dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/fab_margin"
                        android:padding="@dimen/fab_margin">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="82dp"
                            android:layout_height="103dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/icon_adduser" />

                        <TextView
                            android:id="@+id/txt_username"
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:layout_toRightOf="@id/logo"
                            android:text="Username"
                            android:textColor="@color/darkTextColor"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_id"
                            android:layout_width="370dp"
                            android:layout_height="31dp"
                            android:layout_below="@id/txt_username"
                            android:layout_toRightOf="@id/logo"
                            android:text="ID"
                            android:textColor="@color/darkTextColor" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="168dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">

            <androidx.cardview.widget.CardView
                android:layout_width="124dp"
                android:layout_height="134dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/fab_margin"
                app:cardElevation="@dimen/fab_margin">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/input_jadwal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/icon_addlist" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Input jadwal"
                        android:textAlignment="center"
                        android:textColor="#0E1843"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="124dp"
                android:layout_height="134dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/fab_margin"
                app:cardElevation="@dimen/fab_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/icon_barcode" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Presensi"
                        android:textColor="#0E1843"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="168dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">


            <androidx.cardview.widget.CardView
                android:layout_width="124dp"
                android:layout_height="134dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/fab_margin"
                app:cardElevation="@dimen/fab_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/img_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/icon_report" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan"
                        android:textColor="#0E1843"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="124dp"
                android:layout_height="134dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/fab_margin"
                app:cardElevation="@dimen/fab_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/img_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/icon_adduser" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Register"
                        android:textColor="#0E1843"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
